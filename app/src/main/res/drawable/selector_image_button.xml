<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- disabled state-->
    <item android:drawable="@android:color/holo_red_light" android:state_enabled="false" />

    <!-- pressed state / clicked state -->
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#808080" />
        </shape>

    </item>

    <!-- focused state -->
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="#808080" />
        </shape>

    </item>

    <!-- enabled state / default state-->
    <item android:drawable="@android:color/transparent" android:state_enabled="true" />
</selector>